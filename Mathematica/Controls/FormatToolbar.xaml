<UserControl x:Class="Mathematica.Controls.FormatToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mathematica.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Button Name="boldButton" Margin="10, 0, 0 ,0" Width="30" Height="28"
                Command="EditingCommands.ToggleBold"
                CommandTarget="{Binding DataContext,RelativeSource={RelativeSource Self}}">B</Button>
    </StackPanel>
</UserControl>
