<Window x:Class="Mathematica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Mathematica.Controls"
        xmlns:utilities="clr-namespace:TinyMVVM.Utilities;assembly=TinyMVVM"
        xmlns:behaviors="clr-namespace:Mathematica.Behaviors"
        xmlns:mathematica="clr-namespace:Mathematica"
        xmlns:converters="clr-namespace:Mathematica.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <utilities:ApexGrid Rows="Auto, Auto, *">
        <utilities:ApexGrid.ColumnDefinitions>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="227*"/>
        </utilities:ApexGrid.ColumnDefinitions>
        <controls:FormatToolbar DataContext="{Binding ElementName=mathBox}" Grid.ColumnSpan="2" Margin="0,18,0,373"/>
        <Menu Grid.ColumnSpan="2" Margin="0,0,0,401">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save as"/>
            </MenuItem>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Help"/>
        </Menu>
        <controls:MathBox Multiline="True" x:Name="mathBox" TextChanged="MathBox_OnTextChanged" FontSize="20"
                          EnableArrowNavigation="True" SelectionChanged="MathBox_OnSelectionChanged" PreviewKeyDown="MathBox_OnPreviewKeyDown" Grid.ColumnSpan="2" Margin="0,46,0,0"/>

    </utilities:ApexGrid>
</Window>
