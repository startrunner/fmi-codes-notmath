<Window x:Class="Mathematica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Mathematica.Controls"
        xmlns:utilities="clr-namespace:TinyMVVM.Utilities;assembly=TinyMVVM"
        xmlns:behaviors="clr-namespace:Mathematica.Behaviors"
        xmlns:mathematica="clr-namespace:Mathematica"
        xmlns:converters="clr-namespace:Mathematica.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <utilities:ApexGrid Rows="Auto, *">
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save as"/>
            </MenuItem>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Help"/>
        </Menu>
        <controls:MathBox Grid.Row="1" Multiline="True" x:Name="mathBox" TextChanged="MathBox_OnTextChanged" FontSize="12"
                          behaviors:FocusChildOnArrowBehavior.IsFocusChildOnArrowEnabled="True"
                          EnableCaretFocus="True"
                            SelectionChanged="MathBox_OnSelectionChanged" PreviewKeyDown="MathBox_OnPreviewKeyDown"/>
        
    </utilities:ApexGrid>
</Window>
