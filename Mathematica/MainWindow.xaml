<Window x:Class="Mathematica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Mathematica.Controls"
        xmlns:utilities="clr-namespace:TinyMVVM.Utilities;assembly=TinyMVVM"
        xmlns:behaviors="clr-namespace:Mathematica.Behaviors"
        xmlns:mathematica="clr-namespace:Mathematica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <utilities:ApexGrid Columns="*,*" Rows="*,*">
        <controls:MathBox Multiline="True" x:Name="mathBox" TextChanged="MathBox_OnTextChanged" FontSize="25"
                          behaviors:FocusChildOnArrowBehavior.IsFocusChildOnArrowEnabled="True"
                            SelectionChanged="MathBox_OnSelectionChanged" PreviewKeyDown="MathBox_OnPreviewKeyDown"/>
        <TreeView Grid.Column="1" ItemsSource="{Binding Document.Blocks, ElementName=mathBox}" Name="tv">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType = "{x:Type Paragraph}"
                                          ItemsSource = "{Binding Path=Inlines}">
                    <TextBlock>
                        <Run Text="Paragraph"/>
                        <Run Text="{Binding Name}"/>
                    </TextBlock>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type Run}">
                    <TextBlock Text="{Binding Text}"/>
                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type InlineUIContainer}">
                    <TextBlock>
                        <Run Text="MathElementControl"/>
                        <Run Text="{Binding Path=Child.DataContext.Id, Mode=OneWay}"/>
                    </TextBlock>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
        <utilities:ApexGrid Grid.Row="1" Grid.ColumnSpan="2" Columns="*,*" 
                            FocusManager.IsFocusScope="True" Focusable="True">
            <utilities:ApexGrid.Resources>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="Beige"/>
                            <Setter Property="KeyboardNavigation.TabNavigation" Value="Local"/>
                            <Setter Property="KeyboardNavigation.ControlTabNavigation" Value="Local"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </utilities:ApexGrid.Resources>
            <StackPanel Grid.Column="0" Background="Aquamarine">
                <TextBlock>Forward:</TextBlock>
                <TextBlock Text="{Binding Path=(behaviors:FocusChildOnArrowBehavior.ForwardUiElement),ElementName=mathBox}"/>
                <TextBlock>Backward:</TextBlock>
                <TextBlock Text="{Binding Path=(behaviors:FocusChildOnArrowBehavior.BackwardUiElement),ElementName=mathBox}"/>
                <TextBlock Text="{Binding Path=CaretPosition, ElementName=mathBox,Converter={mathematica:TextPointerToStringConverter}}" Name="debugWindow"/>
            </StackPanel>
        </utilities:ApexGrid>
    </utilities:ApexGrid>
</Window>
